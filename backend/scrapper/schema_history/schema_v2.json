{
    "version": "v2",
    "schema": {
        "research_focus": {
            "type": "string"
        },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "authors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "venue": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "url": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "authors",
                    "venue",
                    "year"
                ]
            }
        },
        "current_research": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "funding": {
                        "type": "string"
                    },
                    "dates": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "description"
                ]
            }
        },
        "teaching": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "course_name": {
                        "type": "string"
                    },
                    "course_number": {
                        "type": "string"
                    },
                    "semester": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "schedule": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    }
                },
                "required": [
                    "course_name",
                    "semester",
                    "year"
                ]
            }
        },
        "honors_awards": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    }
                },
                "required": [
                    "title"
                ]
            }
        },
        "affiliations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "institution": {
                        "type": "string"
                    },
                    "department": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "lab": {
                        "type": "string"
                    }
                },
                "required": [
                    "institution",
                    "title"
                ]
            }
        }
    },
    "documentation": "This schema defines the structure for an academic profile, including research focus, publications (with authors, venue, year, and URL), current research projects (with title, description, funding, and dates), teaching history (with course details and schedule), honors and awards, and affiliations (with institution, department, title, and lab)."
}