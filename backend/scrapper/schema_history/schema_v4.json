{
    "version": "v4",
    "schema": {
        "research_focus": {
            "type": "string"
        },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "authors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "venue": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "url": {
                        "type": "string"
                    },
                    "code_url": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "authors",
                    "venue",
                    "year"
                ]
            }
        },
        "current_research": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "funding": {
                        "type": "string"
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date"
                    },
                    "end_date": {
                        "type": "string",
                        "format": "date"
                    }
                },
                "required": [
                    "title",
                    "description"
                ]
            }
        },
        "teaching": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "course_name": {
                        "type": "string"
                    },
                    "course_number": {
                        "type": "string"
                    },
                    "semester": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "schedule": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    }
                },
                "required": [
                    "course_name",
                    "semester",
                    "year"
                ]
            }
        },
        "honors_awards": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "date_range": {
                        "type": "string"
                    }
                },
                "required": [
                    "title"
                ]
            }
        },
        "affiliations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "institution": {
                        "type": "string"
                    },
                    "department": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "lab": {
                        "type": "string"
                    }
                },
                "required": [
                    "institution",
                    "title"
                ]
            }
        },
        "service": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "organization": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    }
                },
                "required": [
                    "title",
                    "organization",
                    "year"
                ]
            }
        }
    },
    "documentation": "This schema extends v3 by adding a 'service' section to accommodate program committee memberships and other service activities.  The 'publications' section now includes a 'code_url' field to handle cases where code is associated with a publication.  All other fields remain consistent with v3."
}