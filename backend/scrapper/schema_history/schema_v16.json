{
    "version": "v16",
    "schema": {
        "personal_info": {
            "type": "object",
            "properties": {
                "full_name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "affiliation": {
                    "type": "string"
                },
                "contact_info": {
                    "type": "object",
                    "properties": {
                        "email": {
                            "type": "string",
                            "format": "email"
                        },
                        "phone": {
                            "type": "string"
                        },
                        "office": {
                            "type": "string"
                        },
                        "website": {
                            "type": "string",
                            "format": "url"
                        }
                    }
                }
            },
            "required": [
                "full_name",
                "title",
                "affiliation"
            ]
        },
        "biography": {
            "type": "object",
            "properties": {
                "markdown": {
                    "type": "string"
                }
            }
        },
        "research": {
            "type": "object",
            "properties": {
                "free_text": {
                    "type": "string"
                }
            }
        },
        "education": {
            "type": "object",
            "properties": {
                "free_text": {
                    "type": "string"
                }
            }
        },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "authors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "journal_or_conference": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "url": {
                        "type": "string",
                        "format": "url"
                    },
                    "doi": {
                        "type": "string"
                    }
                }
            }
        },
        "teaching": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "course_name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "level": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    }
                }
            }
        },
        "service": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "organization": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "awards": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "awarding_body": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    }
                }
            }
        },
        "additional_notes": {
            "type": "string"
        }
    },
    "documentation": "This schema (v16) extends v15 by adding a 'free_text' field to the 'research' and 'education' sections. This allows for the inclusion of unstructured text data, accommodating the provided content's format.  The 'biography' field is changed to an object containing a 'markdown' field to better represent the markdown input. All other fields remain consistent with v15."
}