{
    "version": "v6",
    "schema": {
        "research_focus": {
            "type": "object",
            "properties": {
                "summary": {
                    "type": "string"
                },
                "links": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "summary"
            ]
        },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "authors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "venue": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "url": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "authors",
                    "venue",
                    "year"
                ]
            }
        },
        "current_research": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "funding": {
                        "type": "string"
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date"
                    },
                    "end_date": {
                        "type": "string",
                        "format": "date"
                    }
                },
                "required": [
                    "title",
                    "description"
                ]
            }
        },
        "teaching": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "course_name": {
                        "type": "string"
                    },
                    "course_number": {
                        "type": "string"
                    },
                    "semester": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "schedule": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    }
                },
                "required": [
                    "course_name",
                    "semester",
                    "year"
                ]
            }
        },
        "honors_awards": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "date_range": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "award",
                            "position"
                        ]
                    },
                    "authors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "venue": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "type"
                ]
            }
        }
    },
    "documentation": "This schema extends v5 by improving the structure of 'current_research' to handle multiple research projects, each with a title, description, funding information, and start/end dates.  The 'honors_awards' section is enhanced to accommodate both awards and positions, allowing for more detailed descriptions and inclusion of authors and venue for publications related to awards."
}