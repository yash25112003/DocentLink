{
  "type": "object",
  "properties": {
    "biography": {
      "type": "object",
      "properties": {
        "markdown": {
          "type": "string",
          "description": "Biography in Markdown format."
        },
        "image": {
          "type": "string",
          "description": "URL or path to a profile image."
        },
        "missionStatement": {
          "type": "string",
          "description": "Mission statement of the individual."
        },
        "aboutMe": {
          "type": "string",
          "description": "A free-form description of the individual."
        },
        "contact": {
          "type": "string",
          "description": "Contact information."
        }
      },
      "required": [
        "markdown"
      ]
    },
    "research": {
      "type": "object",
      "properties": {
        "interests": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of research interests."
        },
        "latestNews": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Title of the news item."
              },
              "description": {
                "type": "string",
                "description": "Description of the news item."
              },
              "url": {
                "type": "string",
                "description": "URL related to the news item (e.g., publication, award)."
              },
              "date": {
                "type": "string",
                "format": "date",
                "description": "Date of the news item."
              },
              "type": {
                "type": "string",
                "description": "Type of news item (e.g., publication, award, grant)."
              }
            },
            "required": [
              "title",
              "description"
            ]
          }
        }
      },
      "required": [
        "interests",
        "latestNews"
      ]
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "venue": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          },
          "url": {
            "type": "string"
          },
          "abstract": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "Type of publication (e.g., journal article, conference paper, patent)"
          },
          "impactFactor": {
            "type": "number",
            "description": "Impact factor of the journal (if applicable)"
          }
        },
        "required": [
          "title",
          "venue",
          "year"
        ]
      }
    },
    "teaching": {
      "type": "object",
      "properties": {
        "position": {
          "type": "string"
        },
        "institution": {
          "type": "string"
        },
        "courses": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "position",
        "institution"
      ]
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "year"
        ]
      }
    }
  },
  "required": [
    "biography"
  ]
}