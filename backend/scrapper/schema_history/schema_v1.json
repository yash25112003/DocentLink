{
  "type": "object",
  "properties": {
    "biography": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "Biographical information. May contain Markdown or HTML.  Error messages will be included if extraction failed."
        },
        "extractionStatus": {
          "type": "string",
          "description": "Indicates the success or failure of content extraction.  e.g., 'success', 'failed', 'partial'",
          "enum": [
            "success",
            "failed",
            "partial"
          ]
        },
        "errorMessage": {
          "type": "string",
          "description": "Error message if content extraction failed."
        }
      },
      "required": [
        "content",
        "extractionStatus"
      ]
    },
    "researchInterests": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "List of research interests."
      }
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "journal": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          },
          "volume": {
            "type": "string"
          },
          "issue": {
            "type": "string"
          },
          "pages": {
            "type": "string"
          },
          "doi": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "abstract": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "authors"
        ]
      }
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "degree": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          }
        },
        "required": [
          "degree",
          "institution"
        ]
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "website": {
          "type": "string",
          "format": "url"
        }
      }
    }
  },
  "additionalProperties": true
}