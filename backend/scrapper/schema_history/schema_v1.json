{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Academic Profile",
  "description": "Schema for representing an academic profile.",
  "type": "object",
  "properties": {
    "biography": {
      "type": "object",
      "properties": {
        "markdown": {
          "type": "string",
          "description": "Biography in Markdown format."
        },
        "html": {
          "type": "string",
          "description": "Biography in HTML format (optional)."
        }
      },
      "required": [
        "markdown"
      ]
    },
    "research": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Summary of research interests."
        },
        "interests": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of research interests."
        },
        "projects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "publications": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/publication"
                }
              }
            },
            "required": [
              "title"
            ]
          }
        },
        "awards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "url"
              }
            },
            "required": [
              "name"
            ]
          }
        },
        "funding": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "agency": {
                "type": "string"
              },
              "amount": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "year": {
                "type": "integer"
              }
            },
            "required": [
              "agency",
              "title"
            ]
          }
        }
      },
      "required": [
        "summary"
      ]
    },
    "publications": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/publication"
      }
    },
    "teaching": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "courseName": {
            "type": "string"
          },
          "semester": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          },
          "details": {
            "type": "string"
          }
        },
        "required": [
          "courseName"
        ]
      }
    },
    "service": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "organization": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          }
        },
        "required": [
          "role",
          "organization"
        ]
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "email"
      ]
    }
  },
  "definitions": {
    "publication": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "venue": {
          "type": "string"
        },
        "year": {
          "type": "integer"
        },
        "url": {
          "type": "string",
          "format": "url"
        },
        "type": {
          "type": "string",
          "enum": [
            "journal",
            "conference",
            "book",
            "other"
          ]
        }
      },
      "required": [
        "title",
        "authors",
        "venue",
        "year"
      ]
    }
  }
}